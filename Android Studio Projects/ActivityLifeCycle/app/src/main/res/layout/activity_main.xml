<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_700"
        android:text="Counter"
        android:textColor="#954560"
        android:textSize="72sp"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="29dp" />

    <TextView
        android:id="@+id/textViewCounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:text="0"
        android:textColor="#733530"
        android:textSize="72sp"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="218dp" />

    <Button
        android:id="@+id/buttonCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click"
        android:textSize="72sp"
        android:onClick="IncreaseNumber"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="467dp" />

    <Button
        android:id="@+id/buttonActivity2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity2"
        android:onClick="MoveActivity2"/>

    <Button
        android:id="@+id/buttonActivity3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity3"
        android:onClick="MoveActivity3"/>

</LinearLayout>